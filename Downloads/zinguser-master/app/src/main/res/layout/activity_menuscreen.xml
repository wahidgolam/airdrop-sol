<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menuscreen"
    android:background="#FFF4EA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout23"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/dark_orange"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back_black_group" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/outlet_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/clashdisplay_semibold"
                            android:letterSpacing="0"
                            android:text="Ice N' Spice"
                            android:textColor="@color/white"
                            android:textSize="28dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/outlet_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/duplet_regular"
                        android:text="Snacks and Shawarma"
                        android:textColor="#FBFAF8"
                        android:textSize="16sp" />
                </LinearLayout>

                <!--Fake one to create a shadow-->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="82dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="18dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="22dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/timelapse" />

                        <TextView
                            android:id="@+id/outlet_zing_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/urbanist_semibold"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:fontFamily="@font/urbanist_medium"
                            android:text="zing time"
                            android:textColor="@color/grey"
                            android:textSize="12dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="82dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/timelapse" />

                        <TextView
                            android:id="@+id/zing_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:fontFamily="@font/duplet_bold"
                            android:text="12"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-2dp"
                            android:fontFamily="@font/duplet_bold"
                            android:text="mins"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

    <club.cred.neopop.PopFrameLayout
        android:id="@+id/search_restaurants"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/relativeLayout23"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="-30dp"
        android:clickable="true"
        android:padding="5dp"
        app:neopop_bottom_surface_color="@color/black"
        app:neopop_button_position="bottom|right"
        app:neopop_center_surface_color="@color/white"
        app:neopop_depth="3dp"
        app:neopop_parent_view_color="@color/black"
        app:neopop_right_surface_color="@color/black"
        app:neopop_shimmer_color="#FFF79767"
        app:neopop_shimmer_duration="5000"
        app:neopop_shimmer_width="24dp"
        app:neopop_stroke_color="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/searchBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/search_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/searchBtn"
                android:background="@color/white"
                android:fontFamily="@font/duplet_regular"
                android:hint="What are you ordering today?"
                android:textStyle="italic" />

        </RelativeLayout>


    </club.cred.neopop.PopFrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_restaurants">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/filterHeader"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="menu"
                    android:fontFamily="@font/clashdisplay_semibold"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>


                <Switch
                    android:id="@+id/veg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/nonveg"
                    android:text="veg"
                    android:textColor="#333"
                    android:fontFamily="@font/duplet_semibold"
                    android:textSize="20sp"
                    android:layout_marginRight="15dp"
                    />

                <Switch
                    android:id="@+id/nonveg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="non-veg"
                    android:textColor="#333"
                    android:fontFamily="@font/duplet_semibold"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

                                <!--enter menu-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/itemRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/filterHeader"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:overScrollMode="never" />

            <LinearLayout
                android:id="@+id/marginBottom"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@+id/itemRV"
                android:orientation="horizontal" />




    </RelativeLayout>
    </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/orange_strip"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_above="@+id/bottomCart"
        android:background="@color/dark_orange" />

    <RelativeLayout
        android:id="@+id/bottomCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavbar"
        android:background="#2b2b2b">

        <TextView
            android:id="@+id/no_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/clashdisplay_medium"
            android:text="2 Items"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@id/toCart"
            android:fontFamily="@font/clashdisplay_semibold"
            android:text="Go to cart"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/toCart"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/right_arrow" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rad13_bottomback"
        android:paddingBottom="8dp"
        android:elevation="10dp"
        android:translationZ="500dp"
        android:clickable="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginBottom="8dp"
            >
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/history_layout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/history_black"
                    android:padding="14dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/history_image"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/home_layout"
                android:layout_marginLeft="56dp"

                android:layout_toEndOf="@+id/history_layout"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/zing"
                    android:id="@+id/home_image"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="56dp"

                android:id="@+id/cart_layout"
                android:layout_toEndOf="@+id/home_layout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:src="@drawable/cart_black"
                    android:id="@+id/cart_image"/>

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>

    </RelativeLayout>

