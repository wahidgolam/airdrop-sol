            app:neopop_parent_view_color="@color/black"
            app:neopop_right_surface_color="@color/black"
            app:neopop_shimmer_color="#FFF79767"
            app:neopop_shimmer_duration="5000"
            app:neopop_shimmer_width="24dp"
            app:neopop_stroke_color="@color/black">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/duplet_bold"
                android:gravity="center"
                android:text="Take Our Survey"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </club.cred.neopop.PopFrameLayout>
        <club.cred.neopop.PopFrameLayout
            android:id="@+id/Unzing"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:neopop_bottom_surface_color="@color/dark_orange"
            app:neopop_button_position="bottom|right"
            app:neopop_center_surface_color="@color/white"
            app:neopop_depth="3dp"
            app:neopop_parent_view_color="@color/dark_orange"
            app:neopop_right_surface_color="@color/dark_orange"
            app:neopop_shimmer_color="#FFF79767"
            app:neopop_shimmer_duration="5000"
            app:neopop_shimmer_width="24dp"
            app:neopop_stroke_color="@color/dark_orange">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/duplet_bold"
                android:gravity="center"
                android:text="UnZing"
                android:textAlignment="center"
                android:textColor="#F5765B"
                android:textSize="20sp" />


        </club.cred.neopop.PopFrameLayout>

