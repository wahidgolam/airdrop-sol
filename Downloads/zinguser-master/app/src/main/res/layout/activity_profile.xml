    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="@color/dark_orange">


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back_black_group" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.1"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:fontFamily="@font/clashdisplay_semibold"
            android:layout_marginTop="12dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="34dp"
            android:textColor="#FBFAF8"
            />

    </RelativeLayout>
    


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/zing_roundlogo"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zing."
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/clashdisplay_semibold"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:textColor="#FE834F"/>


        <club.cred.neopop.PopFrameLayout
            android:id="@+id/terms_and_condition"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            app:neopop_bottom_surface_color="@color/black"
            app:neopop_button_position="bottom|right"
            app:neopop_center_surface_color="#F5765B"
            app:neopop_depth="3dp"
            app:neopop_parent_view_color="@color/black"
            app:neopop_right_surface_color="@color/black"
            app:neopop_shimmer_color="#FFF79767"
            app:neopop_shimmer_duration="5000"
            app:neopop_shimmer_width="24dp"
            app:neopop_stroke_color="@color/black">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/duplet_bold"
                android:gravity="center"
                android:text="Terms &amp; Conditions"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </club.cred.neopop.PopFrameLayout>

        <club.cred.neopop.PopFrameLayout
