<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <club.cred.neopop.PopFrameLayout
        android:id="@+id/search_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        app:neopop_bottom_surface_color="@color/black"
        app:neopop_button_position="bottom|right"
        app:neopop_center_surface_color="@color/white"
        app:neopop_depth="3dp"
        app:neopop_parent_view_color="@color/black"
        app:neopop_right_surface_color="@color/black"
        app:neopop_shimmer_color="#FFF79767"
        app:neopop_shimmer_duration="5000"
        app:neopop_shimmer_width="24dp"
        app:neopop_stroke_color="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/underlined_phonetext"
                android:fontFamily="@font/clashdisplay_semibold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_centerHorizontal="true"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView24"
                android:layout_marginTop="20dp"
                >

                <club.cred.neopop.PopFrameLayout
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    app:neopop_bottom_surface_color="@color/black"
                    app:neopop_button_position="bottom|right"
                    app:neopop_center_surface_color="@color/white"
                    app:neopop_depth="3dp"
                    app:neopop_parent_view_color="@color/black"
                    app:neopop_right_surface_color="@color/black"
                    app:neopop_shimmer_color="#FFF79767"
                    app:neopop_shimmer_duration="5000"
                    app:neopop_shimmer_width="24dp"
                    app:neopop_stroke_color="@color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/phoneNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:fontFamily="@font/clashdisplay_regular"
                            android:hint="7551092283"
                            android:textSize="18sp" />

                    </RelativeLayout>


                </club.cred.neopop.PopFrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/no">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/clashdisplay_semibold"
                        android:text="no spam. promise :)"
                        android:textColor="#2b2b2b"
                        android:textSize="16sp" />

                    <club.cred.neopop.PopFrameLayout
                        android:id="@+id/no1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginTop="21dp"
                        android:layout_marginBottom="30dp"
                        android:clickable="true"
                        android:paddingHorizontal="30dp"
                        android:paddingVertical="14dp"
                        app:neopop_bottom_surface_color="@color/black"
                        app:neopop_button_position="bottom|right"
                        app:neopop_center_surface_color="@color/dark_orange"
                        app:neopop_depth="3dp"
                        app:neopop_parent_view_color="@color/black"

                        app:neopop_right_surface_color="@color/black"
                        app:neopop_stroke_color="@color/black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/duplet_bold"
                            android:gravity="center"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                    </club.cred.neopop.PopFrameLayout>












                </RelativeLayout>














            </RelativeLayout>






        </RelativeLayout>




    </club.cred.neopop.PopFrameLayout>





</RelativeLayout>