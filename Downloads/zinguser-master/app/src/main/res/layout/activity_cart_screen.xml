<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartScreen"
    android:background="#FFF4EA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="@color/dark_orange">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/clashdisplay_semibold"
                    android:text="zing cart."
                    android:textColor="#FBFAF8"
                    android:textSize="28sp" />

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/back_black_group" />


            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/extendedHeader"
                style="@style/MyCardView"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_below="@+id/header"
                android:layout_marginTop="-20dp"
                app:cardBackgroundColor="#FFF4EA"
                app:cardElevation="0dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut" />

            <RelativeLayout
                android:id="@+id/header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/extendedHeader"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="-8dp"
                android:layout_marginRight="24dp">


                <TextView
                    android:id="@+id/completeOrderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clashdisplay_semibold"
                    android:text="complete your order"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/clear_cart"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/clear_cart" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header2">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="15dp" />

                <club.cred.neopop.PopFrameLayout
                    android:id="@+id/applyCoupons"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_below="@+id/recyclerView"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    app:neopop_bottom_surface_color="@color/black"
                    app:neopop_button_position="bottom|right"
                    app:neopop_center_surface_color="@color/white"
                    app:neopop_depth="3dp"
                    app:neopop_parent_view_color="@color/black"
                    app:neopop_right_surface_color="@color/black"
                    app:neopop_shimmer_color="#FFF79767"
                    app:neopop_shimmer_duration="5000"
                    app:neopop_shimmer_width="24dp"
                    app:neopop_stroke_color="@color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/cheatcode"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@color/white"
                            android:fontFamily="@font/clashdisplay_semibold"
                            android:hint="apply cheatcode"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/crossSelected"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="-10dp"
                            android:layout_toEndOf="@+id/cheatcode"
                            android:src="@drawable/redcross"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/applyBtn"
                            android:layout_width="74dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/apply" />

                    </RelativeLayout>


                </club.cred.neopop.PopFrameLayout>

                <TextView
                    android:id="@+id/messageText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/applyCoupons"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/clashdisplay_semibold"
                    android:text="Sorry the coupon is not applicable on this order"
                    android:textAlignment="textEnd"
                    android:visibility="invisible" />


                <club.cred.neopop.PopFrameLayout

                    android:id="@+id/grandTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/messageText"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="160dp"
                    android:padding="5dp"
                    app:neopop_bottom_surface_color="@color/black"
                    app:neopop_button_position="bottom|right"
                    app:neopop_center_surface_color="@color/white"
                    app:neopop_depth="3dp"
                    app:neopop_parent_view_color="@color/black"
                    app:neopop_right_surface_color="@color/black"
                    app:neopop_shimmer_color="#FFF79767"
                    app:neopop_shimmer_duration="5000"
                    app:neopop_shimmer_width="24dp"
                    app:neopop_stroke_color="@color/black">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/duplet_regular"
                            android:text="Taxes &amp; Charges"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/taxes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/duplet_bold"
                            android:text="₹2.00"
                            android:textColor="#2b2b2b"
                            android:textSize="18sp" />


                        <TextView
                            android:id="@+id/cheatcode1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/taxes"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:fontFamily="@font/duplet_bold"
                            android:text="TOTAL"
                            android:textColor="#2b2b2b"
                            android:textSize="18sp" />

                        <TextView

                            android:id="@+id/actualPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/taxes"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="10dp"
                            android:layout_toStartOf="@+id/grandTotalAmt"
                            android:fontFamily="@font/clashdisplay_regular"
                            android:text="₹60.00"
                            android:textColor="@color/grey"
                            android:textSize="16sp"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/grandTotalAmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/taxes"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="6.27dp"
                            android:layout_marginRight="10.73dp"
                            android:layout_marginBottom="10.73dp"
                            android:fontFamily="@font/duplet_bold"
                            android:text="₹60.00"
                            android:textColor="@color/black"
                            android:textSize="22sp" />

                    </RelativeLayout>


                </club.cred.neopop.PopFrameLayout>


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/orange_strip"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_above="@+id/bottomCart"
        android:background="@color/dark_orange" />

    <RelativeLayout
        android:id="@+id/bottomCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavbar"
        android:background="#2b2b2b"
        android:layout_centerHorizontal="true">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/clashdisplay_semibold"
            android:text="Go to payment"
            android:textColor="@color/white"
            android:textSize="22sp" />

           <ImageView
               android:id="@+id/toCart"
               android:layout_width="23dp"
               android:layout_height="19dp"
               android:layout_centerVertical="true"
               android:layout_marginRight="0dp"
               android:layout_toEndOf="@+id/text1"
               android:src="@drawable/right_arrow"
               android:layout_gravity="center"/>

       </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomNavbar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rad13_bottomback"
        android:paddingBottom="8dp"
        android:elevation="10dp"
        android:translationZ="500dp"
        android:clickable="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginBottom="8dp"
            >
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:elevation="10dp"
            >

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/history_layout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/history_black"
                    android:padding="14dp"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/history_image"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:id="@+id/home_layout"
                android:layout_marginLeft="56dp"

                android:layout_toEndOf="@+id/history_layout"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/zing"
                    android:id="@+id/home_image"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="56dp"

                android:id="@+id/cart_layout"
                android:layout_toEndOf="@+id/home_layout">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:src="@drawable/cart_black"
                    android:id="@+id/cart_image"/>

            </LinearLayout>


        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/empty_cart_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="276dp"
            android:src="@drawable/unsuccessful"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Looks like you haven’t added anything to your cart yet!"
            android:fontFamily="@font/clashdisplay_medium"
            android:textSize="22sp"
            android:gravity="center"
            android:padding="24dp"/>






    </LinearLayout>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>