<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <club.cred.neopop.PopFrameLayout
        android:id="@+id/search_restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        app:neopop_bottom_surface_color="@color/black"
        app:neopop_button_position="bottom|right"
        app:neopop_center_surface_color="@color/white"
        app:neopop_depth="3dp"
        app:neopop_parent_view_color="@color/black"
        app:neopop_right_surface_color="@color/black"
        app:neopop_shimmer_color="#FFF79767"
        app:neopop_shimmer_duration="5000"
        app:neopop_shimmer_width="24dp"
        app:neopop_stroke_color="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/instructions_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:fontFamily="@font/clashdisplay_semibold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_centerHorizontal="true"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/instructions_heading">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Collection"
                    android:fontFamily="@font/duplet_bold"
                    android:textSize="20sp"
                    android:textColor="#2b2b2b"
                    android:layout_marginTop="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order from the best restaurant in your campus, without standing in a line."
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/duplet_regular"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaints"
                    android:fontFamily="@font/duplet_bold"
                    android:textSize="20sp"
                    android:textColor="#2b2b2b"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All complaints &amp; queries regarding orders, cancellations and refunds should be  directed to Zing via App "
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/duplet_regular"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:fontFamily="@font/duplet_bold"
                    android:textSize="20sp"
                    android:textColor="#2b2b2b"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Any error caused in payment should be informed to us immediately at admin@zingnow.in."
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/duplet_regular"
                    android:textColor="#2b2b2b"
                    android:textSize="16sp"
                    />

                <club.cred.neopop.PopFrameLayout
                    android:id="@+id/save_btn"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="25dp"
                    android:clickable="true"
                    app:neopop_button_position="bottom|right"
                    app:neopop_center_surface_color="#F5765B"
                    app:neopop_depth="3dp"
                    app:neopop_parent_view_color="@color/black"
                    app:neopop_stroke_color="@color/black"
                    app:neopop_right_surface_color="@color/black"
                    app:neopop_bottom_surface_color="@color/black">

                    <TextView
                        android:id="@+id/nextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="I Understand"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:fontFamily="@font/duplet_bold"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>


                </club.cred.neopop.PopFrameLayout>











            </LinearLayout>






        </RelativeLayout>




    </club.cred.neopop.PopFrameLayout>





</RelativeLayout>